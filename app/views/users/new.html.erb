<% provide :title, t("users.new.sign_up") %>
<h1><%= t("users.new.sign_up")%></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t("users.new.lable_name") %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password, t("users.new.lable_password") %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t("users.new.confirmation") %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t("users.new.create_my_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
